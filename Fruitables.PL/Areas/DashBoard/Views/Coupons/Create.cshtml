@model CouponCreateVM
@section MainHeader {
    Create Coupon
}
<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title"> Create </h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="Coupons" asp-action="Create">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Code"></label>
                    <input asp-for="Code" class="form-control" placeholder="Enter Name Code">
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountPercentage"></label>
                    <input asp-for="DiscountPercentage" class="form-control" placeholder="Enter DiscountPercentage">
                    <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpirationDate"></label>
                    <input asp-for="ExpirationDate" class="form-control" placeholder="Enter Name Description">
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>


            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<!-- /.card -->
