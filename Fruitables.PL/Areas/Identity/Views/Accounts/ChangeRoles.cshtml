@model EditRolesViewModel

@{
    ViewData["Title"] = "ChangeRoles";
}

<h1>ChangeRoles</h1>

<h4>EditRolesViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeRoles" asp-controller="Accounts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="selectedRoles" class="control-label"></label>
                <select asp-for="selectedRoles" asp-items="Model.RolesList" class="form-control">
                </select>
                <span asp-validation-for="selectedRoles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

