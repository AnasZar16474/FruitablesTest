@model Fruitables.DAL.Models.Cart
        <!-- Single Page Header start -->
    <div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Cart</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Products</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Item in Model.CartItem)
                    {
                        <tr>
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <img src="~/Files/Images/@Item.Product.ImagName" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                                </div>
                            </th>
                            <td>
                              
                                   
                                    
                                <p class="mb-0 mt-4">@Item.Product.Name</p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">@Item.Product.Price <span>$</span></p>
                            </td>
                            <td>
                                <div class="input-group quantity mt-4" style="width: 100px;">
                                    <div class="input-group-btn">
                                           <form asp-controller="Cart" asp-action="decrease">
                                                <input type="hidden" name="cartItemIdA" value="@Item.CartItemId" />
                                                <input type="hidden" name="newQuantityA" value="@Item.Quantity" />
                                            <input class="btn btn-sm rounded-circle bg-light border" value="-" type="submit" />
                                                  
                                        
                                            </form>
                                    </div>
                                    <input type="text" class="form-control form-control-sm text-center border-0" value=@Item.Quantity>
                                    <div class="input-group-btn">
                                        <form asp-controller="Cart" asp-action="Increase">
                                            <input type="hidden" name="cartItemIdB" value="@Item.CartItemId" />
                                            <input type="hidden" name="newQuantityB" value="@Item.Quantity" />
                                            <input class="btn btn-sm rounded-circle bg-light border" value="+" type="submit" />
                                                                          
                                        </form>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="mb-0 mt-4">@(Item.Product.Price*Item.Quantity) <span>$</span> </p>
                            </td>
                            <td>
                                <a asp-controller="Cart" asp-action="RemovtItem" asp-route-Id=@Item.CartItemId class="btn btn-md rounded-circle bg-light border mt-4">
                                    <i class="fa fa-times text-danger"></i>
                                </a>
                            </td>

                        </tr>
                        
                    }
                  
                </tbody>
            </table>
        </div>
        <div id="messageContainer"></div>
        <form id="EnterCoupon" class="mt-5" asp-action="ApplyCoupon" asp-controller="Cart" method="post" class="d-inline">
            <div class="mt-5">
                <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" name="couponCode" placeholder="Enter coupon code" />
                <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="submit">Apply Coupon</button>
            </div>
        </form>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0"><span>$</span> <span id="totalPrice"></span> </p>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">SubtotalAfterDiscount:</h5>
                            <p class="mb-0"><span>$</span> <span id="discountedPriceA"></span> </p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Shipping</h5>
                            <div class="">
                                <p class="mb-0">Flat rate: $3.00</p>
                            </div>
                        </div>
                        <p class="mb-0 text-end">Shipping to <span>@ViewBag.Location</span> </p>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                        <p class="mb-0 pe-4"><span>$</span> <span id="FinalPriceA"></span> </p>
                    </div>
                    <a asp-controller="Checkout" asp-action="Index" class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->
@section Scripts{
    <script src="~/js/coupon.js"></script>
}